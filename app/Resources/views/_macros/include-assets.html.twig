{% macro javascripts(javascripts) %}
    {% for name in javascripts|default([]) %}
        <script type="text/javascript" src="{{ asset(name) }}"></script>
    {% endfor %}
{% endmacro javascripts %}

{% macro stylesheets(stylesheets) %}
    {% for name in stylesheets|default([]) %}
        <link rel="stylesheet" type="text/css" href="{{ asset(name) }}">
    {% endfor %}
{% endmacro stylesheets %}

{% macro generic_link(href, type, relation) %}
    <link rel="{{ relation }}" type="{{ type }}" href="{{ href }}" />
{% endmacro generic_link %}
