<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link type="text/css" src="{{ asset('app.css', 'stylesheets') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('manifest.js', 'javascripts') }}"></script>
            <script type="text/javascript" src="{{ asset('vendor.js', 'javascripts') }}"></script>
            <script type="text/javascript" src="{{ asset('app.js', 'javascripts') }}"></script>
        {% endblock %}
    </body>
</html>
